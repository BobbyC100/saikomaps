enum LifecycleStatus {
  ACTIVE
  LEGACY_FAVORITE
  FLAG_FOR_REVIEW
  ARCHIVED
  CLOSED_PERMANENTLY
}

enum ArchiveReason {
  CLOSED
  AGED_OUT
  QUALITY_DECLINE
  DATA_ERROR
  MANUAL
}

enum VerificationStatus {
  UNVERIFIED
  SOURCE_CONFIRMED
  FOUNDER_VERIFIED
}
