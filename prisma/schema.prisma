  created_at DateTime @default(now()) @map("created_at")

  // RELATIONS
  golden_record golden_records @relation(fields: [place_id], references: [canonical_id], onDelete: Cascade)

  @@index([place_id])
  @@index([added_by])
  @@index([import_batch])
